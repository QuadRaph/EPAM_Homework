<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <Button
            android:text="@string/btn2"
            android:layout_width="159dp"
            android:layout_height="45dp"
            android:id="@+id/btn" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1"/>
    <Button
            android:text="@string/btn3"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:id="@+id/btn2" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn"/>
</android.support.constraint.ConstraintLayout>